<Page x:Class="_222_Korygin.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Korygin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="ChangePassPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" 
                   Grid.Row="0" 
                   Grid.Column="0" 
 
                   VerticalAlignment="Center"/>

        <TextBlock Text="Текущий пароль" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   Margin="10,0,0,0"  
                   VerticalAlignment="Center"/>

        <TextBlock Text="Новый пароль" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Margin="10,0,0,0" 

                   VerticalAlignment="Center"/>

        <TextBlock Text="Подтверждение пароля" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Margin="0,0,5,0" 
                   VerticalAlignment="Center"/>

        <TextBox x:Name="TbLogin" 
                 Grid.Row="0" 
                 Grid.Column="1" 
                 Margin="10,5,10,5" 
                 ToolTip="Введите логин"/>

        <PasswordBox x:Name="CurrentPasswordBox" 
                     Grid.Row="1" 
                     Grid.Column="1" 

                     ToolTip="Введите текущий пароль"/>

        <PasswordBox x:Name="NewPasswordBox" 
                     Grid.Row="2" 
                     Grid.Column="1" 
                     Margin="10,5,10,5" 
                     ToolTip="Введите новый пароль"/>

        <PasswordBox x:Name="ConfirmPasswordBox" 
                     Grid.Row="3" 
                     Grid.Column="1" 
                     Margin="10,5,10,5" 
                     ToolTip="Подтвердите новый пароль"/>

        <Button x:Name="ButtonSave" 
                Content="Сохранить" 
                Grid.Row="4" 
                Grid.ColumnSpan="2" 
                Margin="10,5,10,5" 
                Height="40" 
                Click="ButtonSave_Click"
                ToolTip="Сохранить новый пароль"/>
    </Grid>
</Page>
