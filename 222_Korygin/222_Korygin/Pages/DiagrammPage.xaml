<Page x:Class="_222_Korygin.Pages.DiagrammPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Korygin.Pages"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      xmlns:winForms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiagrammPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="CmbUser" 
                      DisplayMemberPath="FIO" 
                      Width="200" 
                      Margin="5,0"
                      SelectionChanged="UpdateChart"/>

            <TextBlock Text="Тип диаграммы:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="CmbDiagram" 
                      Width="150" 
                      Margin="5,0"
                      SelectionChanged="UpdateChart"/>

            <Button x:Name="BtnExportExcel" 
                    Content="Экспорт в Excel" 
                    Margin="20,0,5,0" 
                    Padding="10,5"
                    Click="BtnExportExcel_Click"/>

            <Button x:Name="BtnExportWord" 
                    Content="Экспорт в Word" 
                    Margin="5,0" 
                    Padding="10,5"
                    Click="BtnExportWord_Click"/>
        </StackPanel>

        
        <winForms:WindowsFormsHost Grid.Row="1" Margin="5">
            <charts:Chart x:Name="ChartPayments">
                <charts:Chart.Legends>
                    <charts:Legend/>
                </charts:Chart.Legends>
            </charts:Chart>
        </winForms:WindowsFormsHost>
    </Grid>
</Page>
