<Page x:Class="_222_Korygin.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Korygin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center" 
          Width="800" 
          Height="450" 
          VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*" />
            <ColumnDefinition Width="53*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>

        <Label Content="Пароль" 
               x:Name="labelPass" 
               Margin="181,177,0,10" 
               HorizontalAlignment="Left" 
               Width="76" />

        <Label Content="Логин" 
               x:Name="labelLog" 
               Margin="185,112,0,75" 
               HorizontalAlignment="Left" 
               Width="76" />

        <TextBox x:Name="TextBoxLogin" 
                 Margin="69,0,0,75" 
                 TextWrapping="Wrap" 
                 ToolTip="Введите логин или почту" 
                 TextChanged="TextBoxLogin_TextChanged"

                 VerticalAlignment="Bottom" 
                 HorizontalAlignment="Left" 

                 Grid.Column="1" />

        <PasswordBox x:Name="PasswordBox" 
                     Background="Transparent" 
                     ToolTip="Введите пароль" 
                     Margin="0,0,311,10" 
                     HorizontalAlignment="Right" 
                     Width="150" 
                     Height="34" 
                     VerticalAlignment="Bottom" 
                     Grid.Column="1" 
                     PasswordChanged="PasswordBox_PasswordChanged" />

        <Button x:Name="ButtonEnter" 
                Margin="69,20,0,0" 
                Content="Вход" 
                ToolTip="Кнопка входа" 
                Grid.Row="1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Click="ButtonEnter_OnClick" />

        <Button x:Name="ButtonReg"
                Margin="69,68,0,0"  
                Content="Регистрация" 
                ToolTip="Кнопка регистрации" 
                Grid.Row="1" 
                HorizontalAlignment="Left"  
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Click="ButtonReg_Click" />

        <Button x:Name="ButtonChangePassword" 
                Margin="69,120,0,0" 
                Content="Смена пароля" 
                ToolTip="Кнопка смены пароля" 
                Grid.Row="1" 
                HorizontalAlignment="Left"  
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Click="ButtonChangePassword_Click" />

        <TextBox Grid.Column="1" 
                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"  ContextMenu="{x:Null}" 
                 Visibility="Hidden"
                 x:Name="captcha" 
                 Height="34" 
                 Foreground="Red" 
                 FontStyle="Italic" 
                 FontWeight="Heavy" 
                 VerticalAlignment="Top" 
                 Width="150" 
                 Background="{x:Null}" 
                 FontStretch="UltraCondensed" 
                 IsReadOnly="True" 
                 HorizontalContentAlignment="Center" 
                 HorizontalAlignment="Right" 
                 Margin="0,35,311,0" 
                 VerticalContentAlignment="Center" 
                 FontSize="20" />

        <TextBox Grid.Column="1" 
                 Visibility="Hidden" 
                 x:Name="captchaInput" 
                 HorizontalAlignment="Left"  Height="34" 
                 Margin="265,35,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top"  Width="160" />

        <Button x:Name="submitCaptcha"  Margin="10,30,0,0" 
                 Visibility="Hidden"
                 Height="34" 
                 Content="Подтвердить" 
                 ToolTip="Подтвердить ввод капчи" 
                 HorizontalAlignment="Left"  Width="120" 
                 VerticalAlignment="Top" 
                 Click="submitCaptcha_Click" />
        <Label Content="Капча"
                 Visibility="Hidden"
                 Name="labelCaptcha" 
                 Margin="185,35,0,148" 
                 HorizontalAlignment="Left" 
                 Width="72" RenderTransformOrigin="0.522,-1.061" />

    </Grid>
</Page>
